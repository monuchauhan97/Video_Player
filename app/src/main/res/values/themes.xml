    <style name="FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:backgroundTint">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WhiteAccent">
        <item name="colorAccent">@color/purple_500</item>
    </style>


    <style name="AlertDialogDanger" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/red_theam</item>
        <item name="android:background">@color/dialog_background</item>
        <item name="dialogCornerRadius">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <style name="CustomBottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
