<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:descendantFocusability="afterDescendants">

    <FrameLayout
        android:id="@+id/surface_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#000000"
            android:scaleType="fitXY" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/bottom_seek_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:max="100"
                    android:maxHeight="3dp"
                    android:progress="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:text="06:21"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="10:10"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/app_video_lock"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:padding="@dimen/_4sdp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="42dp" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/app_video_previous"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_below="@+id/app_video_currentTime"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/app_video_play"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/hplib_ic_previous" />

                    <ImageView
                        android:id="@+id/app_video_play"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_below="@+id/app_video_currentTime"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/hplib_ic_pause" />

                    <ImageView
                        android:id="@+id/app_video_next"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_below="@+id/app_video_currentTime"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/app_video_play"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/hplib_ic_next" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/video_floating_mode"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/floating_window" />

                <ImageView
                    android:id="@+id/app_video_crop"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:padding="@dimen/_5sdp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="42dp" />

                <TextView
                    android:id="@+id/clarity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:text="clarity"
                    android:textColor="#ffffff"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/app_video_more"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/bottom_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/back_tiny"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/fullscreen"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/video_background_play"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginBottom="5dp"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/app_video_mute"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/app_video_speed"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="5dp"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/app_video_repete"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="4dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingTop="12dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/video_playlist"
            android:layout_toRightOf="@+id/back"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="jbjvdx"
            android:textColor="#ffffff"
            android:textSize="@dimen/_13sdp" />

        <ImageView
            android:id="@+id/video_playlist"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:padding="@dimen/_4sdp" />

        <LinearLayout
            android:id="@+id/battery_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/battery_level"
                android:layout_width="23dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/video_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:id="@+id/start_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/app_video_p_skip"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/start_layout"
                android:padding="@dimen/_5sdp" />

            <ImageView
                android:id="@+id/start"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/jz_click_play_selector" />

            <ImageView
                android:id="@+id/app_video_n_skip"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/start_layout"
                android:padding="@dimen/_5sdp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/replay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/retry_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/retry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="9dp"
            android:paddingTop="4dp"
            android:paddingRight="9dp"
            android:paddingBottom="4dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/app_video_unlock"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:padding="@dimen/_4sdp"
        android:visibility="invisible" />

    <ScrollView
        android:id="@+id/scrollOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/video_playback_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/app_video_shuffle"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/video_screenshot"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@+id/video_floating_mode"
                android:padding="10dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/speed_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_lay"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Playback Speed"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/play_back_speed_close"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_5sdp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/speed05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="0.5x"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/speed075"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="0.75x"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/speed10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="1.0x"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/speed125"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="1.25x"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/speed15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="1.5x"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/speed175"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="1.75x"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/speed20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="2.0x"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/videoplaylist_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_38sdp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/video_list_close"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:padding="@dimen/_5sdp"
        android:visibility="gone" />
</RelativeLayout>
